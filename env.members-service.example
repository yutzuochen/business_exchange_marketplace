# Members Service Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# MEMBERS SERVICE CONFIGURATION
# =============================================================================

# SendGrid Email Service (Production)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=Business Exchange

# =============================================================================
# SESSION MANAGEMENT
# =============================================================================

# Session security and configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
SESSION_TTL_MINUTES=1440
SESSION_COOKIE_DOMAIN=.yourdomain.com
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_SAME_SITE=Lax

# =============================================================================
# RATE LIMITING
# =============================================================================

# Authentication rate limits
RATE_LIMIT_LOGIN_PER_MINUTE=5
RATE_LIMIT_SIGNUP_PER_HOUR=3
RATE_LIMIT_FORGOT_PASSWORD_PER_HOUR=3
RATE_LIMIT_CONTACT_SELLER_PER_HOUR=10

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Password and account security
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# Two-factor authentication
TWO_FACTOR_ISSUER=Business Exchange

# =============================================================================
# FILE UPLOAD LIMITS
# =============================================================================

# File size restrictions (in MB)
MAX_FILE_SIZE_MB=5
MAX_TOTAL_SIZE_MB=25
MAX_FILES_PER_REQUEST=10
MAX_AVATAR_SIZE_MB=1
GLOBAL_BODY_LIMIT_MB=30

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Set to 'development' for local testing
APP_ENV=development

# Redis connection (required for sessions and rate limiting)
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# NOTES
# =============================================================================

# 1. SESSION_SECRET: Generate a strong random string for production
#    Example: openssl rand -hex 32

# 2. SESSION_COOKIE_DOMAIN: Set to your apex domain (e.g., .example.com)
#    Leave empty for localhost development

# 3. SENDGRID_API_KEY: Get from SendGrid dashboard
#    In development, emails are logged to console instead

# 4. Rate limiting: Adjust based on your traffic patterns
#    More restrictive = more secure, but may affect legitimate users

# 5. File upload limits: Balance between user experience and security
#    Consider your storage costs and CDN capabilities
