{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug in Docker",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "/app",
            "port": 40000,
            "host": "127.0.0.1",
            "showLog": true,
            "trace": "verbose"
        },
        {
            "name": "Debug Local",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/server",
            "env": {
                "DB_HOST": "localhost",
                "DB_PORT": "3306",
                "DB_USER": "app",
                "DB_PASSWORD": "app_password",
                "DB_NAME": "business_exchange",
                "REDIS_ADDR": "localhost:6379",
                "APP_PORT": "8080",
                "APP_ENV": "development"
            },
            "args": [],
            "showLog": true
        }
    ]
}
